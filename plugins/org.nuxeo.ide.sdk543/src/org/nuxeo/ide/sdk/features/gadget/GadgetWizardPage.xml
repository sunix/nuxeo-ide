<panel cols="2"  layout="grid">

<text>Project:</text>
<project id="project" hfill="true">
<validator type="required">The project field is required</validator>
</project>

<text>Gadget name:</text>
<textbox id="gadgetName" hfill="true">
<validator type="regex" value="[A-Za-z0-9_]+">Not a valid gadget name</validator>
</textbox>

<text>Gadget title:</text>
<textbox id="gadgetTitle" hfill="true"/>

<text>Gadget category:</text>
<combo id="category" hfill="true" readonly="false">
Nuxeo,
Media,
Monitoring,
Utilities
</combo>


<text>Gadget description:</text>
<textarea id="gadgetDescription" hfill="true" vfill="true"/>



</panel>